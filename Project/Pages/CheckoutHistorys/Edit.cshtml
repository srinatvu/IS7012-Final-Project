@page
@model Project.Pages.CheckoutHistorys.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Checkout information</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CheckoutHistory.Id" />
            <div class="form-group">
                <label asp-for="CheckoutHistory.BorrowDate" class="control-label"></label>
                <input asp-for="CheckoutHistory.BorrowDate" class="form-control" />
                <span asp-validation-for="CheckoutHistory.BorrowDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckoutHistory.ReturnDate" class="control-label"></label>
                <input asp-for="CheckoutHistory.ReturnDate" class="form-control" />
                <span asp-validation-for="CheckoutHistory.ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckoutHistory.BookID" class="control-label"></label>
                <select asp-for="CheckoutHistory.BookID" class="form-control" asp-items="ViewBag.BookID"></select>
                <span asp-validation-for="CheckoutHistory.BookID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckoutHistory.MemberID" class="control-label"></label>
                <select asp-for="CheckoutHistory.MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                <span asp-validation-for="CheckoutHistory.MemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckoutHistory.StaffID" class="control-label"></label>
                <select asp-for="CheckoutHistory.StaffID" class="form-control" asp-items="ViewBag.StaffID"></select>
                <span asp-validation-for="CheckoutHistory.StaffID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
